{{!-- MODAL SIGNUP --}}
<div class="contenedor-modal">
    <div class="contenido-modal">
        <div class="contenido-title">
            <img src="img/motorcycle-solid.svg" alt="moto">
            <h4>Registro Usuario</h4>
            <span class="cerrar" id="cerrarRegistro">&times;</span>
        </div>
        <hr>
        <div class="contenido-body">
            <form action="">
                <span class="text-warning" id="passW"></span>
                <div class="form-group">
                    <input type="type" name="nombre" id="nombre" placeholder="Nombre"
                        class="form-control bg-transparent" autofocus>
                    <span id="nombreError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="type" name="apellido" id="apellido" placeholder="Apellido"
                        class="form-control bg-transparent">
                    <span id="apellidoError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" name="email" id="email" placeholder="Email" class="form-control bg-transparent">
                    <span id="emailError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" id="telefono" placeholder="Telefono"
                        class="form-control bg-transparent">
                    <span id="telefonoError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" placeholder="Password"
                        class="form-control bg-transparent">
                    <span id="passwordError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" name="verificar-password" id="verificar-password"
                        placeholder="Reingrese el Password" class="form-control bg-transparent">
                </div>
            </form>
        </div>
        <hr>
        <div class="contenido-footer">
            <button class="btn btn-primary btn-sm registrarse">Registrarse</button>
            <button class="btn btn-secondary btn-sm cancelar">Cancelar</button>
        </div>
    </div>
</div>
{{!-- FIN MODAL SIGNUP --}}

