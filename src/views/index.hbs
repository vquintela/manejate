{{! MODAL ALQUILER }}
<div id="modal-alquiler" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="motocicleta" />
                <div class="row align-items-end">

                    <div class="col-sm-6">
                        <label for="fechaEntrega">Fecha de entrega</label>
                        <div class="form-group">
                            <div id="fechaEntrega" class="input-group date" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" data-target="#fechaEntrega"
                                    name="fechaEntrega" />
                                <div class="input-group-append" data-target="#fechaEntrega"
                                    data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="col-sm-6">
                        <label for="fechaDevolucion">Fecha de devolución</label>
                        <div class="form-group">
                            <div id="fechaDevolucion" class="input-group date" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input"
                                    data-target="#fechaDevolucion" name="fechaDevolucion" />
                                <div class="input-group-append" data-target="#fechaDevolucion"
                                    data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button btn-alquilar type="button" class="btn btn-primary">Alquilar</button>
            </div>
        </div>
    </div>
</div>
{{! FIN MODAL ALQUILER }}

