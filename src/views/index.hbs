<div class="pricing-header px-3 py-3 pb-md-4 mx-auto text-center">
    <h1 class="display-3">MANEJATE</h1>
    <p class="lead">Ya es hora que decidas vos como querés moverte...</p>
</div>
<div class="container">
    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01" style="width:6rem;">Precio</label>
        </div>
        <select class="filtro" id="precio" style="width:22rem;">
            <option value="all" selected>Seleccioná el rango de precio...</option>
            <option value="1">$100~$200</option>
            <option value="2">$200~$400</option>
            <option value="3">$500~</option>
        </select>
    </div>

    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <label class="input-group-text" for="inputGroupSelect01" style="width:6rem;">Ubicación</label>
        </div>
        <select class="filtro" id="ubicacion" style="width:22rem;">
            <option value="all" selected>Seleccioná donde querés retirar el vehículo...</option>
            {{#each data.sedes}}
            <option value="{{_id}}">{{domicilio}}</option>
            {{/each}}
        </select>
    </div>

    <div id="moto-card-columns" class="card-columns">
    </div>
</div>

{{! MODAL ALQUILER }}
<div id="modal-alquiler" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" name="motocicleta" />
                <div class="row align-items-end">
                    <div class="col-6 form-group">
                        <label for="fechaEntrega">Fecha de entrega</label>
                        <input class="form-control" type="date" min="{{data.fechaMinima}}" name="fechaEntrega" />
                    </div>
                    <div class="col-6 form-group">
                        <label for="fechaDevolucion">Fecha de devolución</label>
                        <input class="form-control" type="date" name="fechaDevolucion" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button btn-alquilar type="button" class="btn btn-primary">Alquilar</button>
            </div>
        </div>
    </div>
</div>
{{! FIN MODAL ALQUILER }}

{{! MODAL RESPUESTA ALQUILER }}
<div id="modal-respuesta" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal">Aceptar</button>
            </div>
        </div>
    </div>
</div>
{{! MODAL RESPUESTA ALQUILER }}

{{!-- MODAL SIGNUP --}}
<div class="contenedor-modal">
    <div class="contenido-modal">
        <div class="contenido-title">
            <img src="img/motorcycle-solid.svg" alt="moto">
            <h4>Registro Usuario</h4>
            <span class="cerrar" id="cerrarRegistro">&times;</span>
        </div>
        <hr>
        <div class="contenido-body">
            <form action="">
                <span class="text-warning" id="passW"></span>
                <div class="form-group">
                    <input type="type" name="nombre" id="nombre" placeholder="Nombre" class="form-control bg-transparent" autofocus>
                    <span id="nombreError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="type" name="apellido" id="apellido" placeholder="Apellido" class="form-control bg-transparent">
                    <span id="apellidoError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" name="email" id="email" placeholder="Email" class="form-control bg-transparent">
                    <span id="emailError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" id="telefono" placeholder="Telefono" class="form-control bg-transparent">
                    <span id="telefonoError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" name="password" id="password" placeholder="Password" class="form-control bg-transparent">
                    <span id="passwordError" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="password" name="verificar-password" id="verificar-password" placeholder="Reingrese el Password" class="form-control bg-transparent">
                </div>
            </form>
        </div>
        <hr>
        <div class="contenido-footer">
            <button class="btn btn-primary btn-sm registrarse">Registrarse</button>
            <button class="btn btn-secondary btn-sm cancelar">Cancelar</button>
        </div>
    </div>
</div>
{{!-- FIN MODAL SIGNUP --}}

<script src="https://cdnjs.cloudflare.com/ajax/libs/handlebars.js/4.7.6/handlebars.min.js"></script>
<script src="/js/index.js"></script>
<script id="motos-template" type="text/x-handlebars-template">
\{{#each motocicletas}}
<div id="\{{_id}}" class="card mb-4 shadow-sm" data-toggle="modal" data-target=".modal">
    <img class="card-img-top" src="img/\{{imagen}}" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">\{{marca}}</h5>
        <p class="card-text">\{{modelo}}</p>
    </div>
    <div class="card-footer">
        <small class="text-muted">$\{{precio}}/día</small>
    </div>
</div>
\{{/each}}
</script>