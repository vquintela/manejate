<div class="row w-70">
    {{>sidebar}}
    <div class="col-md-10 filas-detalles">
        <div class="col-lg-12">
            <h1 class="display-5">Bienvenido {{user.nombre}} {{user.apellido}} !</h1>
            <h4 class="display-5"> Podes ver aqui tus reservas</h4>
        </div>     
        <div class="col-lg-12" id="contenedor">
                <table class="table table-hover" id="insertar-filas">
                <thead class="thead-dark">
                <tr>
                <th scope="col">Fecha de Entrega</th>
                <th scope="col">Fecha de Devolucion</th> 
                <th scope="col">Estado de la Reserva</th> 
                <th scope="col">Marca </th>    
                </tr>
                </thead>
                <tbody>
                {{#each alquileres}}    
                <tr>
                <td>{{fechaEntrega}}</td>
                <td>{{fechaDevolucion}}</td>
                <td>{{estado}}</td>
                <td>{{motocicleta.marca}}</td>
                {{else}}
                <td>No hay alquileres</td>                
                </tr>
                {{/each}}
                </tbody>
            </table>    
        </div>
    </div>

</div>
