<div class="row w-100">
    {{>sidebar}}
    <div class="col-md-10">
        <div class="container p-4" id="contenedor">
            <div class="row" id="App">
                <div class="col-md-6 mx-auto">
                    <div class="card text-center">
                        <div class="card-header">
                            <h3>Cambio de Password</h3>
                        </div>
                        <div class="card-body">
                            <form>
                                <div class="form-group">
                                    <input type="text" id="email" placeholder="{{user.email}}" class="form-control"
                                        readonly>
                                </div>
                                <div class="form-group">
                                    <input type="password" id="passwordActual" placeholder="Password Actual"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="password" id="nuevaPass" placeholder="Nueva Password"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <input type="password" id="repNuevaPass" placeholder="Reingrese la nueva Password"
                                        class="form-control">
                                </div>
                                <div class="form-group">
                                    <button type="button" class="btn btn-primary" id="btn-pass"
                                        data-id='{{user._id}}'>Cambiar Password</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="module" src="../js/newpws.js"></script>