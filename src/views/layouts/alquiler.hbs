<div class="row w-100">
    {{>sidebar}}
    <div class="col-md-10 filas-detalles">
        <div class="container" id="contenedor">
            <h3 class="display-5 pt-3 mb-3">Alquileres</h3>
            <div class="row" id="App">
                {{> alquiler/index alquileres }}
            </div>
        </div>
    </div>
</div>
{{!-- MODAL DETALLE MOTO --}}
<div class="contenedor-modal">
    <div class="contenido-modal">
        <div class="contenido-title">
            <img src="img/motorcycle-solid.svg" alt="moto">
            <h4>Detalle Moto</h4>
            <span class="cerrar" id="cerrarRegistro">&times;</span>
        </div>
        <hr>
        <div class="contenido-body row">
            <div class="col-md-4">
                <img src="" alt="img" class="img-fluid" id="img-modal">
            </div>
            <div class="col-md-8">
                <div class="d-flex">
                    <h5>Marca:</h5>
                    <p class="text-muted ml-2 my-auto" id="marca"></p>
                </div>
                <div class="d-flex">
                    <h5>Modelo:</h5>
                    <p class="text-muted ml-2 my-auto" id="modelo"></p>
                </div>
                <div class="d-flex">
                    <h5>Precio:</h5>
                    <p class="text-muted ml-2 my-auto" id="precio"></p>
                </div>
                <div class="d-flex">
                    <h5>Descripcion:</h5>
                    <p class="text-muted ml-2 my-auto" id="descripcion"></p>
                </div>
                <div class="d-flex">
                    <h5>Ubicacion:</h5>
                    <p class="text-muted ml-2 my-auto" id="ubicacion"></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="module" src="js/alquiler.js"></script>